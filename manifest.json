{
  "manifest_version": 3,
  "name": "Salesforce CRM Data Extractor",
  "version": "1.0.0",
  "description": "Extract and manage Salesforce CRM data locally",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.salesforce.com/*"
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.salesforce.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}